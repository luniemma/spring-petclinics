<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
		"-//Puppy Crawl//DTD Check Configuration 1.2//EN"
		"https://checkstyle.org/dtds/configuration_1_2.dtd">
<module name="com.puppycrawl.tools.checkstyle.Checker">
	<module name="io.spring.nohttp.checkstyle.check.NoHttpCheck"/>
	<module name="SuppressionFilter">
		<property name="file" value="${config_loc}/nohttp-checkstyle-suppressions.xml"/>
	</module>
	<!-- Suppress NoHttp violations originating from Testcontainers Cloud injected pseudo files (tcc-agent) -->
	<module name="SuppressionSingleFilter">
		<property name="message" value="tcc-agent"/>
		<property name="checks" value="io.spring.nohttp.checkstyle.check.NoHttpCheck"/>
	</module>
</module>
